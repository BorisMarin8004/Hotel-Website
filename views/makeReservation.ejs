<%-include ('partials/header.ejs')%>

    <title>Reservations Page</title>
</head>
<body>

<div id = "reservationSection">

    <%-include ('partials/nav.ejs')%>

    <div id = "reservationCenterSection">
        <h1>RESERVATIONS</h1>

        <form id = "reservationForm" method="POST" action="reservation/makeReservation">
            <p>To make a reservation, please fill in the information below, then click "Make Reservation".</p>
            <br>
            First Name:
            <input type="text" name="firstName"><br>
            Last Name:
            <input type="text" name="lastName"><br>
            Credit Card:
            <input type="text" name="creditCard"><br>
            Check-In Date:
            <input type="date" max="01/01/2022"
               required pattern="\d{4}-\d{2}-\d{2}"
               placeholder="YYYY-MM-DD"
               name="inDate" ><br>
            Check-Out Date:
            <input type="date" max="01/01/2022"
               required pattern="\d{4}-\d{2}-\d{2}"
               placeholder="YYYY-MM-DD"
               name="outDate"><br>
            Room Type:
            <input type="radio" name="type" value="oneBed"> 1 Bedroom
            <input type="radio" name="type" value="twoBed"> 2 Bedroom
            <input type="radio" name="type" value="twoBed"> Villa
            <br>
            <div class = "buttonSectionForm">
            <button> Make Reservation </button>
            </div>
        </form>

        <% if (typeof message != "undefined"){ %>
        <h3><%=message%></h3>
        <% } %>
    </div>
</div>

<%-include ('partials/footer.ejs')%>

</body>
</html>